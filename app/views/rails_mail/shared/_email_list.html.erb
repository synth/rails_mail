<div class="space-y-1">
  <% @emails.each do |email| %>
    <%= link_to email_path(email), class: "block px-3 py-2 rounded-md #{current_page?(email_path(email)) ? 'bg-gray-100' : 'hover:bg-gray-50'}" do %>
      <div class="text-sm font-medium text-gray-900 truncate"><%= email.subject %></div>
      <div class="text-xs text-gray-500">
        <span class="truncate"><%= email.from %></span>
        <span class="ml-2 text-gray-400"><%= time_ago_in_words(email.created_at) %> ago</span>
      </div>
    <% end %>
  <% end %>
</div> 